@{
}

@model List<Order>

<link rel="stylesheet" href="~/css/AllOrdersPage.css" asp-append-version="true" />

<div class="content">
    <div class="grid-container">
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-content">

                        <h3>@item.OrderDate.ToString("dd.MM.yyyy")</h3>
                        Status: @item.Status<br/>
                        Price Type: @item.OrderPriceType<br />
                        Order Type: @item.OrderType<br />
                        Address: @item.Address<br />

                        Employeers count: @item.Employeers.Count

                        <div class="buttons-container"> 
                            <a asp-action="ShowOrderPage" asp-controller="Admin" asp-route-Id="@item.Id" class="btn btn-primary">View Order</a>

                            <a asp-action="EditOrderPage" asp-controller="Admin" asp-route-Id="@item.Id" class="btn btn-warning">Edit Order</a>

                            <a asp-action="AddEmployeersToOrder" class="btn btn-warning">Manage employeers</a>

                            <a asp-action="DeleteOrder" asp-controller="Admin" asp-route-Id="@item.Id" class="btn btn-danger delete-btn">
                                Delete Order
                                <span class="progress-bar"></span>
                            </a>
                            
                        </div>
                    </div>
                </div>
            }
           
            <div class="add-card">
                <a asp-action="CreateOrderPage" asp-controller="Admin">
                    <div class="card-content" style="color: green">
                        Create new Order +
                    </div>
                </a>
            </div>
            
        }
        else
        {
            <div>
                Orders not exist!
            </div>
        }
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".delete-btn");

            deleteButtons.forEach(button => {
                let timeout;
                let progressBar = button.querySelector(".progress-bar");

                button.addEventListener("mouseenter", function () {
                    if (!button.classList.contains("active")) {
                        progressBar.style.width = "100%";

                        timeout = setTimeout(() => {
                            button.classList.add("active");
                        }, 3000);
                    }
                });

                button.addEventListener("mouseleave", function () {
                    if (!button.classList.contains("active")) {
                        clearTimeout(timeout);
                        progressBar.style.width = "0";
                    }
                });

                button.addEventListener("click", function (event) {
                    if (!button.classList.contains("active")) {
                        event.preventDefault();
                    }
                });
            });
        });
    </script>
}
