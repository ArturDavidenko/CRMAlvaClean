@{
}

@using AlvaCleanCRM.Models.DTOs

@model CustomerToUpdateDto



<link rel="stylesheet" href="~/css/EditEmployeerPage.css" asp-append-version="true" />

<div class="content">

    <div class="content-container">

        <h2>Edit Customer: </h2>

        <h3>@Model.ClientName</h3>
        
       
        <form asp-action="UpdateCustomer" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactPhone" class="control-label"></label>
                <input asp-for="ContactPhone" />
                <span asp-validation-for="ContactPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerType" class="control-label"></label>
                <select asp-for="CustomerType" class="form-control">
                    <option value="">Choose type</option>
                    <option value="Physical person">Physical person</option>
                    <option value="Juridical person">Juridical person</option>
                </select>
                <span asp-validation-for="CustomerType" class="text-danger"></span>
            </div>

            <input asp-for="Id" type="hidden" />

            <div class="form-group button-create">
                <input type="submit" value="Change" class="btn btn-success" />
            </div>
        </form>
        
    </div>

</div>