
@model List<Customer>


<link rel="stylesheet" href="~/css/AllCustomersPage.css" asp-append-version="true"/>

<div class="content">
    <div class="grid-container">
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-content">

                        @if (item.ClientName == "")
                        {
                            <h3>@item.CompanyName</h3>
                        }
                        else
                        {
                            <h3>@item.ClientName</h3>
                        }

                        <p>Type: @item.CustomerType</p>
                        <p>Phone: @item.ContactPhone</p>

                        <div class="buttons-container">
                            <a asp-action="" class="btn btn-primary">View Customer</a>

                            <a asp-action="" class="btn btn-warning">Edit Customer</a>

                            <a asp-action="" class="btn btn-danger">Delete Customer</a>
                            
                        </div>
                    </div>
                </div>
            }
           
            <div class="add-card">
                <a asp-action="AddNewCustomerPage" asp-controller="Admin">
                    <div class="card-content" style="color: green">
                        Add new Customer +
                    </div>
                </a>
            </div>
            
        }
        else
        {
            <div>
                Customers not exist!
            </div>
        }
    </div>

</div>