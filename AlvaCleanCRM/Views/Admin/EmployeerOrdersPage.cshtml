@model List<Order>

<link rel="stylesheet" href="~/css/AllOrdersPage.css" asp-append-version="true" />

<div class="content">
    <div class="container mt-4">
        <h1>Orders</h1>
        <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search...">
        <table class="table table-bordered table-hover" id="ordersTable">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Start Date</th>
                    <th>Status</th>
                    <th>Price Type</th>
                    <th>Order Type</th>
                    <th>Address</th>
                    <th>Employeers count</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.OrderStartDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.Status</td>
                            <td>@item.OrderPriceType</td>
                            <td>@item.OrderType</td>
                            <td>@item.Address</td>
                            <td>@item.Employeers.Count</td>
                            <td>@item.Price eur</td>
                            <td>
                                <a asp-action="ShowOrder" class="btn btn-primary">View Order</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">Orders not exist!</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#ordersTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });

    </script>

}
