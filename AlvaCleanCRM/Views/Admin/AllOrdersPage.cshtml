@{
}

@model List<Order>

<link rel="stylesheet" href="~/css/AllOrdersPage.css" asp-append-version="true" />

<div class="content">
    <div class="grid-container">
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-content">

                        <h3>@item.OrderDate.ToString("dd.MM.yyyy")</h3>
                        Status: @item.Status<br/>
                        Price Type: @item.OrderPriceType<br />
                        Order Type: @item.OrderType<br />
                        Address: @item.Address<br />
                        

                        Employeers count: @item.Employeers.Count

                        <div class="buttons-container">
                            <a asp-action="ShowOrder" class="btn btn-primary">View Order</a>

                            @if (User.Identity.IsAuthenticated && User.IsInRole("admin") || User.IsInRole("Manager"))
                            {
                                <a asp-action="EditOrderPage" class="btn btn-warning">Edit Order</a>

                                <a asp-action="DeleteOrder" class="btn btn-danger">Delete Order</a>
                            }
                            
                        </div>
                    </div>
                </div>
            }
            @if (User.Identity.IsAuthenticated && User.IsInRole("admin") || User.IsInRole("Manager"))
            {
                <div class="add-card">
                    <a asp-action="CreayteNewOrder" asp-area="Admin">
                        <div class="card-content" style="color: green">
                            Create new Order +
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div>
                Orders not exist!
            </div>
        }
    </div>

</div>
