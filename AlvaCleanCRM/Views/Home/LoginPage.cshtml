@using AlvaCleanCRM.Models.ViewModels

@{
    ViewData["Title"] = "Login Page";
}

@model LoginViewModel

<div class="text-center">
    <h1 class="display-4">AlvaClean System</h1>
    @using (Html.BeginForm("LoginAction", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.Label("employeerLastName", "Фамилия работника", new { @class = "control-label" })
            @Html.TextBoxFor(m => m.employeerLastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.employeerLastName)
        </div>
        <div class="form-group">
            @Html.Label("employeerPassword", "Пароль", new { @class = "control-label" })
            @Html.PasswordFor(m => m.employeerPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.employeerPassword)
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    }
</div>
