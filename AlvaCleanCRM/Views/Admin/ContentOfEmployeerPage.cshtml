
@model Employeer

@{
}

<link rel="stylesheet" href="~/css/ContentOfEmployeerPage.css" asp-append-version="true" />

<div class="profile-container">
    <!-- Левая колонка: Аватар и информация -->
    <div class="profile-info">
        @if (@Model.Image != null)
        {
            <img style="height: 150px; width: 150px" src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Image)" alt="Аватар" />
        }
        <h2>@Model.FirstName @Model.LastName</h2>
        <p>Role: @Model.Role</p>
    </div>

    <!-- Правая колонка: Список заказов -->
    <div class="orders-section">
        <h3>Orders</h3>
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                <!-- Пример карточки заказа -->
                @for (int i = 1; i <= 5; i++)
                {
                    <div class="swiper-slide order-card">
                        <h4>Order: #@i</h4>
                        <p>фывфывфывфыв</p>
                        <p>фывфывфывфыв</p>
                        <p>фывфывфывфыв</p>
                        <p>фывфывфывфыв</p>
                        
                    </div>
                }
            </div>
            <!-- Кнопки прокрутки -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</div>

@section Scripts{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script>
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 3,
            spaceBetween: 20,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    </script>
}