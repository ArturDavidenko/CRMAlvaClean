@{
}

@using AlvaCleanCRM.Models.DTOs

@model OrderToUpdateModel

<link rel="stylesheet" href="~/css/AddNewOrderPage.css" asp-append-version="true" />

<div class="content">

    <div class="content-container">

        <h3>Update order</h3>

        <form asp-action="UpdateOrder" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="CustomersList" class="control-label"></label>
                <select asp-for="CustomersList" class="form-control">
                    @foreach (var customer in Model.CustomersList)
                    {
                        <option value="@customer">@customer</option>
                    }
                </select>
                <span asp-validation-for="CustomersList" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderPriceType" class="control-label"></label>
                <select asp-for="OrderPriceType" class="form-control">
                    <option value="">Choose price type of order</option>
                    <option value="Per hour">Per hour</option>
                    <option value="Fixed">Fixed</option>
                </select>
                <span asp-validation-for="OrderPriceType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OrderType" class="control-label"></label>
                <select asp-for="OrderType" class="form-control">
                    <option value="">Choose type of order</option>
                    <option value="Object cleaning">Object cleaning</option>
                    <option value="Service cleaning">Service cleaning</option>
                </select>
                <span asp-validation-for="OrderType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">Choose status</option>
                    <option value="In process">In process</option>
                    <option value="Completed">Completed</option>
                    <option value="Canceled">Canceled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClientComments" class="control-label"></label>
                <input asp-for="ClientComments" />
                <span asp-validation-for="ClientComments" class="text-danger"></span>
            </div>

            <input asp-for="Id" type="hidden" />

            <div class="form-group button-create">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>

</div>



