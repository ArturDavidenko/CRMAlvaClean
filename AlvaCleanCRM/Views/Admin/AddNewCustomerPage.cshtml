}

@using AlvaCleanCRM.Models.RegisterModels

@model RegisterCustomerModel


<link rel="stylesheet" href="~/css/AddNewCustomerPage.css" asp-append-version="true" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="add-customer-page">
    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-user-plus"></i> Add New Customer</h1>
            <p class="form-description">Enter customer details to create a new account</p>
        </div>

        <form asp-action="AddNewCustomer" method="post" enctype="multipart/form-data" class="customer-form">
            <div class="form-group">
                <label asp-for="CustomerType" class="form-label">
                    <i class="fas fa-user-tag"></i> Customer Type
                </label>
                <select asp-for="CustomerType" class="form-select">
                    <option value="">Select customer type</option>
                    <option value="Physical person">Physical person</option>
                    <option value="Juridical person">Juridical person</option>
                </select>
                <span asp-validation-for="CustomerType" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClientName" class="form-label">
                    <i class="fas fa-user"></i> Customer Name
                </label>
                <input asp-for="ClientName" class="form-input" placeholder="Enter customer name" />
                <span asp-validation-for="ClientName" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactPhone" class="form-label">
                    <i class="fas fa-phone"></i> Contact Phone
                </label>
                <input asp-for="ContactPhone" class="form-input" placeholder="Enter phone number" />
                <span asp-validation-for="ContactPhone" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-btn">
                    <i class="fas fa-save"></i> Create Customer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}