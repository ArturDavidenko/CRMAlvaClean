@{
}

@using AlvaCleanCRM.Models.RegisterModels

@model RegisterOrderModel

<link rel="stylesheet" href="~/css/AddNewOrderPage.css" asp-append-version="true" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="create-order-page">
    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-plus-circle"></i> Create New Order</h1>
            <p class="form-description">Fill in the details to create a new cleaning order</p>
        </div>

        <form asp-action="CreateOrder" method="post" enctype="multipart/form-data" class="order-form">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CustomerName" class="form-label">
                        <i class="fas fa-user"></i> Customer
                    </label>
                    <select asp-for="CustomerName" class="form-select">
                        @foreach (var customer in Model.CustomerName)
                        {
                            <option value="@customer">@customer</option>
                        }
                    </select>
                    <span asp-validation-for="CustomerName" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="form-label">
                        <i class="fas fa-info-circle"></i> Status
                    </label>
                    <select asp-for="Status" class="form-select">
                        <option value="">Select status</option>
                        <option value="In process">In process</option>
                        <option value="Completed">Completed</option>
                        <option value="Canceled">Canceled</option>
                    </select>
                    <span asp-validation-for="Status" class="form-error"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="OrderPriceType" class="form-label">
                        <i class="fas fa-tag"></i> Price Type
                    </label>
                    <select asp-for="OrderPriceType" class="form-select">
                        <option value="">Select price type</option>
                        <option value="Per hour">Per hour</option>
                        <option value="Fixed">Fixed</option>
                    </select>
                    <span asp-validation-for="OrderPriceType" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OrderType" class="form-label">
                        <i class="fas fa-broom"></i> Order Type
                    </label>
                    <select asp-for="OrderType" class="form-select">
                        <option value="">Select order type</option>
                        <option value="Object cleaning">Object cleaning</option>
                        <option value="Service cleaning">Service cleaning</option>
                    </select>
                    <span asp-validation-for="OrderType" class="form-error"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="form-label">
                    <i class="fas fa-map-marker-alt"></i> Address
                </label>
                <input asp-for="Address" class="form-input" placeholder="Enter service address" />
                <span asp-validation-for="Address" class="form-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Price" class="form-label">
                        <i class="fas fa-euro-sign"></i> Price
                    </label>
                    <input asp-for="Price" type="number" class="form-input" placeholder="0.00" step="0.01" />
                    <span asp-validation-for="Price" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Hour" class="form-label">
                        <i class="fas fa-clock"></i> Estimated Hours
                    </label>
                    <input asp-for="Hour" type="number" class="form-input" placeholder="0" min="0" step="0.5" />
                    <span asp-validation-for="Hour" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Area" class="form-label">
                        <i class="fas fa-ruler-combined"></i> Area (m²)
                    </label>
                    <input asp-for="Area" type="number" class="form-input" placeholder="0" min="0" />
                    <span asp-validation-for="Area" class="form-error"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="OrderStartDate" class="form-label">
                    <i class="fas fa-calendar-alt"></i> Start Date & Time
                </label>
                <input asp-for="OrderStartDate" type="datetime-local" class="form-input" />
                <span asp-validation-for="OrderStartDate" class="form-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClientComments" class="form-label">
                    <i class="fas fa-comment"></i> Client Comments
                </label>
                <textarea asp-for="ClientComments" class="form-textarea" placeholder="Enter any special instructions"></textarea>
                <span asp-validation-for="ClientComments" class="form-error"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-btn">
                    <i class="fas fa-plus"></i> Create Order
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
