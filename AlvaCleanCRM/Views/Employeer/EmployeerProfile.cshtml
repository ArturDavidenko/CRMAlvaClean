@{
}

@model Employeer


<link rel="stylesheet" href="~/css/EmployeerProfilePage.css" asp-append-version="true" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-image-container">
            @if (Model.Image != null)
            {
                <img class="profile-image" src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Image)" alt="Profile Photo" />
            }
            else
            {
                <div class="profile-image-placeholder">
                    <i class="fas fa-user"></i>
                </div>
            }
            @if (User.Identity.IsAuthenticated && User.IsInRole("admin") && User.Identity.IsAuthenticated || User.IsInRole("manager"))
            {
                <div class="profile-actions">
                    <a asp-action="EditEmployeerPage" asp-controller="Admin" asp-route-Id="@Model.Id" class="btn-edit">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                </div>
            }
        </div>

        <div class="profile-info">
            <h1 class="profile-name">@Model.FirstName @Model.LastName</h1>
            <div class="profile-role">
                <span class="role-badge">@Model.Role</span>
            </div>

            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-phone"></i>
                    <span>@Model.PhoneNumber</span>
                </div>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="stats-section">
            <div class="stat-card">
                <div class="stat-value">@Model.Orders?.Count ?? 0</div>
                <div class="stat-label">Total Orders</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">-</div>
                <div class="stat-label">Completed</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">-</div>
                <div class="stat-label">In Progress</div>
            </div>
        </div>

        <div class="orders-section">
            <h2 class="section-title">
                <i class="fas fa-clipboard-list"></i> Recent Orders
            </h2>

            @if (Model.Orders?.Count > 0)
            {
                <div class="orders-list">
                    <!-- Здесь можно добавить список заказов -->
                    <div class="empty-orders">
                        <p>Order list functionality coming soon</p>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-orders">
                    <i class="fas fa-inbox"></i>
                    <p>No orders assigned yet</p>
                </div>
            }

            <div class="view-all">
                <a asp-action="EmployeerOrdersPage" asp-controller="Admin" asp-route-Id="@Model.Id" class="btn-view-all">
                    View All Orders <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>